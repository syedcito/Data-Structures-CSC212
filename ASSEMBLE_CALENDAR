GOODBYE ENDP
;///////////////////////////////////////////////////////////////////
GOODBYE_COL PROC
	PUSH AX
	PUSH BX
	PUSH CX
	PUSH DX

	MOV BX, 1144
	MOV CX, 16
G:	MOV WORD PTR ES:[BX], 09DCH
	ADD BX, 8
	LOOP G
	MOV BX, 2456
	MOV CX, 5
G1:	MOV WORD PTR ES:[BX], 02DCH
	ADD BX, 2
	LOOP G1
	MOV BX, 2496
	MOV CX, 3
G2:	MOV WORD PTR ES:[BX], 06DCH
	ADD BX, 2
	LOOP G2

	POP AX
	POP BX
	POP CX
	POP DX
	RET
GOODBYE_COL ENDP
;///////////////////////////////////////////////////////////////////
JANUARY PROC
	PUSH AX
	PUSH BX
	PUSH CX
	PUSH DX
;----------------MONTH-----------------
	MOV BX, 1374
	MOV BYTE PTR ES:[BX]   , 'J'
	MOV BYTE PTR ES:[BX+8] , 'A'
	MOV BYTE PTR ES:[BX+16] , 'N'
	MOV BYTE PTR ES:[BX+24], 'U'
	MOV BYTE PTR ES:[BX+32], 'A'
	MOV BYTE PTR ES:[BX+40], 'R'
	MOV BYTE PTR ES:[BX+48], 'Y'
;--------------------------------------

;----------------DATES-----------------
	MOV BX, 2216
	MOV BYTE PTR ES:[BX]   , '1'
	MOV BYTE PTR ES:[BX+10], '2'
	MOV BX, 2486
	MOV BYTE PTR ES:[BX]   , '3'
	MOV BYTE PTR ES:[BX+10], '4'
	MOV BYTE PTR ES:[BX+20], '5'
	MOV BYTE PTR ES:[BX+30], '6'
	MOV BYTE PTR ES:[BX+40], '7'
	MOV BYTE PTR ES:[BX+50], '8'
	MOV BYTE PTR ES:[BX+60], '9'
	MOV BX, 2804
	MOV BYTE PTR ES:[BX]   , '1'
	MOV BYTE PTR ES:[BX+2] , '0'
	MOV BYTE PTR ES:[BX+10], '1'
	MOV BYTE PTR ES:[BX+12], '1'
	MOV BYTE PTR ES:[BX+20], '1'
	MOV BYTE PTR ES:[BX+22], '2'
	MOV BYTE PTR ES:[BX+30], '1'
	MOV BYTE PTR ES:[BX+32], '3'
	MOV BYTE PTR ES:[BX+40], '1'
	MOV BYTE PTR ES:[BX+42], '4'
	MOV BYTE PTR ES:[BX+50], '1'
	MOV BYTE PTR ES:[BX+52], '5'
	MOV BYTE PTR ES:[BX+60], '1'
	MOV BYTE PTR ES:[BX+62], '6'
	MOV BX, 3124
	MOV BYTE PTR ES:[BX]   , '1'
	MOV BYTE PTR ES:[BX+2] , '7'
	MOV BYTE PTR ES:[BX+10], '1'
	MOV BYTE PTR ES:[BX+12], '8'
	MOV BYTE PTR ES:[BX+20], '1'
	MOV BYTE PTR ES:[BX+22], '9'
	MOV BYTE PTR ES:[BX+30], '2'
	MOV BYTE PTR ES:[BX+32], '0'
	MOV BYTE PTR ES:[BX+40], '2'
	MOV BYTE PTR ES:[BX+42], '1'
	MOV BYTE PTR ES:[BX+50], '2'
	MOV BYTE PTR ES:[BX+52], '2'
	MOV BYTE PTR ES:[BX+60], '2'
	MOV BYTE PTR ES:[BX+62], '3'
	MOV BX, 3444
