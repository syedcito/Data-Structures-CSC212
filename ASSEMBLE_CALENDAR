	MOV BYTE PTR ES:[Bx+1156], '*'
	MOV BYTE PTR ES:[Bx+1158], '*'
	MOV BYTE PTR ES:[Bx+1160], '*'
	MOV BX, 3066
	MOV CX, 21
P:	MOV BYTE PTR ES:[BX], '*'
	ADD BX, 2
	LOOP P
	MOV BX, 3232
	MOV CX, 16
P1:	MOV BYTE PTR ES:[BX], '*'
	ADD BX, 2
	LOOP P1
;OPTIONS
	MOV BX, 2340
	MOV BYTE PTR ES:[BX], 'P'
	MOV BYTE PTR ES:[BX+2], 'R'
	MOV BYTE PTR ES:[BX+4], 'E'
