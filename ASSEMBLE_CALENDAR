.MODEL small
.386
.STACK 
.DATA
inBuffer DB 80 DUP(?)
scrBuffer DW 25*80 DUP(?)
.CODE
;///////////////////////////////////////////////////////////////////	
MAIN PROC
	MOV AX, @DATA
	MOV DS, AX
	MOV AX, 0300H
	INT 10H	
	
	SUB AX, AX
	MOV AH, 3H
	MOV BH, 0
	INT 10H
	MOV AX, 0B800H
	MOV ES, AX
	
	CALL SAVESCREEN
;-----------CALLING WELCOME SCREEN-------
CASE00:	CALL CLEARSCREEN
	MOV AH, 01H
	CALL WELCOME_COL
	CALL WELCOME
	CALL HIDECURSOR
	MOV DL, 0
	MOV BX, 3848
	MOV SI, 0
;------------WELCOME SCREEN USER INPUT----------
CASE01:	MOV AH, 10H
	INT 16H
	CMP AL, 0DH	;ENTER
	JE CASE1
	CMP AL, 1BH	;ESC
	JE EXIT
	JMP CASE01
;---------CALLING JANUARY--------------------------
CASE1:	CALL BORDERS
	MOV AH, 00H
	CALL JAN_COL
	CALL JANUARY
	CALL HIDECURSOR
	MOV DL, 0
	MOV BX, 3848
	MOV SI, 0
;-------JANUARY USER INPUT-------------------------	
CASE2:	MOV AH, 10H
	INT 16H
	CMP AL, 4EH	;N
	JE CASE3
	CMP AL, 6EH	;n
	JE CASE3
	CMP AL, 50H	;P
	JE CASE00
	CMP AL, 70H	;p
	JE CASE00
	CMP AL, 51H	;Q
	JE EXIT
	CMP AL, 71H	;q
	JE EXIT
	JMP CASE2
;---------CALLING FEBRUARY----------
CASE3:	CALL BORDERS
	MOV AH, 160
	CALL FEB_COL
	CALL FEBRUARY
	MOV BX, 3848
	MOV SI, 0
;-------FEBRUARY USER INPUT---------
CASE4:	MOV AH, 10H
	INT 16H
	CMP AL, 4EH	;N
	JE CASE5
	CMP AL, 6EH	;n
	JE CASE5
	CMP AL, 50H	;P
	JE CASE1
	CMP AL, 70H	;p
	JE CASE1
	CMP AL, 51H	;Q
	JE EXIT
	CMP AL, 71H	;q
	JE EXIT
	JMP CASE4
;--------CALLING MARCH-------------
CASE5:	CALL BORDERS
	MOV AH, 50H
	CALL MAR_COL
	CALL MARCH
	MOV BX, 3848
	MOV SI, 0
;--------MARCH USER INPUT----------
CASE6:	MOV AH, 10H
	INT 16H
	CMP AL, 4EH	;N
	JE CASE7
	CMP AL, 6EH	;n
	JE CASE7
	CMP AL, 50H	;P
	JE CASE3
	CMP AL, 70H	;p
	JE CASE3
	CMP AL, 51H	;Q
	JE EXIT
	CMP AL, 71H	;q
	JE EXIT
	JMP CASE6
;-------CALLING APRIL---------------
CASE7:	CALL BORDERS
	MOV AH, 51H
	CALL APR_COL
	CALL APRIL
	MOV BX, 3848
	MOV SI, 0
;-------APRIL USER INPUT------------
CASE8:	MOV AH, 10H
	INT 16H
	CMP AL, 4EH	;N
	JE CASE9
	CMP AL, 6EH	;n
	JE CASE9
	CMP AL, 50H	;P
	JE CASE5
	CMP AL, 70H	;p
	JE CASE5
	CMP AL, 51H	;Q
	JE EXIT
	CMP AL, 71H	;q
	JE EXIT
	JMP CASE8
;---------CALLING MAY-------------
CASE9:	CALL BORDERS
	MOV AH, 52H
	CALL MAY_COL
	CALL MAY
	MOV BX, 3848
	MOV SI, 0
;--------MAY USER INPUT-----------
CASE10:	MOV AH, 10H
	INT 16H
	CMP AL, 4EH	;N
	JE CASE11
	CMP AL, 6EH	;n
	JE CASE11
	CMP AL, 50H	;P
	JE CASE7
	CMP AL, 70H	;p
	JE CASE7
	CMP AL, 51H	;Q
	JE EXIT
	CMP AL, 71H	;q
	JE EXIT
	JMP CASE10
;---------CALLING JUNE--------------
CASE11:	CALL BORDERS
	MOV AH, 54H
	CALL JUN_COL
	CALL JUNE
	MOV BX, 3848
	MOV SI,0
;---------JUNE USER INPUT-----------
CASE12:	MOV AH, 10H
	INT 16H
	CMP AL, 4EH	;N
	JE CASE13
	CMP AL, 6EH	;n
	JE CASE13
	CMP AL, 50H	;P
	JE CASE9
	CMP AL, 70H	;p
	JE CASE9
	CMP AL, 51H	;Q
	JE EXIT
	CMP AL, 71H	;q
	JE EXIT
	JMP CASE12
;---------CALLING JULY--------------
CASE13: CALL BORDERS
	MOV AH, 55H
	CALL JUN_COL ;BECAUSE THE SAME WEEKENDS APPLY
	CALL JULY
	MOV BX, 3848
	MOV SI, 0
;----------JULY USER INPUT---------
CASE14:	MOV AH, 10H
	INT 16H
	CMP AL, 4EH	;N
	JE CASE15
	CMP AL, 6EH	;n
	JE CASE15
	CMP AL, 50H	;P
	JE CASE11
	CMP AL, 70H	;p
	JE CASE11
	CMP AL, 51H	;Q
	JE EXIT
	CMP AL, 71H	;q
	JE EXIT
	JMP CASE14
;----------CALLING AUGUST----------
CASE15:	CALL BORDERS
	MOV AH, 56H
	CALL AUG_COL
	CALL AUGUST
	MOV BX, 3848
	MOV SI, 0
;---------AUGUST USER INPUT----------
CASE16:	MOV AH, 10H
	INT 16H
	CMP AL, 4EH	;N
	JE CASE17
	CMP AL, 6EH	;n
	JE CASE17
	CMP AL, 50H	;P
	JE CASE13
	CMP AL, 70H	;p
	JE CASE13
	CMP AL, 51H	;Q
	JE EXIT
	CMP AL, 71H	;q
	JE EXIT
	JMP CASE16
;--------CALLING SEPTEMBER----------
CASE17:	CALL BORDERS
	MOV AH, 58H
	CALL SEP_COL
	CALL SEPTEMBER
	MOV BX, 3848
	MOV SI, 0
;-----SEPTEMBER USER INPUT-----------
CASE18:	MOV AH, 10H
	INT 16H
	CMP AL, 4EH	;N
	JE CASE19
	CMP AL, 6EH	;n
	JE CASE19
	CMP AL, 50H	;P
	JE CASE15
	CMP AL, 70H	;p
	JE CASE15
	CMP AL, 51H	;Q
	JE EXIT
	CMP AL, 71H	;q
	JE EXIT
	JMP CASE18
;--------CALLING OCTOBER-------------
CASE19:	CALL BORDERS
	MOV AH, 60H
	CALL OCT_COL
	CALL OCTOBER
	MOV BX, 3848
	MOV SI, 0
;-----------OCTOBER USER INPUT-------
CASE20:	MOV AH, 10H
	INT 16H
	CMP AL, 4EH	;N
	JE CASE21
	CMP AL, 6EH	;n
	JE CASE21
	CMP AL, 50H	;P
	JE CASE17
	CMP AL, 70H	;p
	JE CASE17
	CMP AL, 51H	;Q
	JE EXIT
	CMP AL, 71H	;q
	JE EXIT
	JMP CASE20
;-------CALLING NOVERMBER------------
CASE21:	CALL BORDERS
	MOV AH, 62H
	CALL NOV_COL
	CALL NOVEMBER
	MOV BX, 3848
	MOV SI, 0
;--------NOVERMBER USER INPUT--------
CASE22:	MOV AH, 10H
	INT 16H
	CMP AL, 4EH	;N
	JE CASE23
	CMP AL, 6EH	;n
	JE CASE23
	CMP AL, 50H	;P
	JE CASE19
	CMP AL, 70H	;p
	JE CASE19
	CMP AL, 51H	;Q
	JE EXIT
	CMP AL, 71H	;q
	JE EXIT
	JMP CASE22
;------CALLING DECEMBER-----------
CASE23:	CALL BORDERS
	MOV AH, 64H
	CALL DECE_COL
	CALL DECEMBER
	MOV DX, 3848
	MOV SI, 0
;---------DECEMBER USER INPUT--------
CASE24:	MOV AH, 10H
	INT 16H
	CMP AL, 4EH	;N
	JE CASE25
	CMP AL, 6EH	;n
	JE CASE25
	CMP AL, 50H	;P
	JE CASE21
	CMP AL, 70H	;p
	JE CASE21
	CMP AL, 51H	;Q
	JE EXIT
	CMP AL, 71H	;q
	JE EXIT
	JMP CASE24
;-------------GOODBYE--------------------
CASE25:	CALL CLEARSCREEN
	MOV AH, 66H
	CALL GOODBYE_COL
	CALL GOODBYE
	CALL HIDECURSOR
	MOV DX, 3848
	MOV SI, 0
;--------------GOODBYE INPUT------------
CASE26:	MOV AH, 10H
	INT 16H
	CMP AL, 0DH	;ENTER
	JE CASE00
	CMP AL, 1BH	;ESC
	JE EXIT
	JMP CASE26
;-----------------EXIT CALENDAR--------
EXIT:	CALL RESTORESCREEN
	SUB AX, AX
	MOV AH, 20H
	MOV BX, 0
	INT 10H
	MOV AX, 4C00H
	INT 21H
MAIN ENDP
;///////////////////////////////////////////////////////////////////
WELCOME PROC
	PUSH AX
	PUSH BX
	PUSH CX
	PUSH DX
;------------START OF PROJECT----------
	MOV BX, 208
	MOV BYTE PTR ES:[BX], 'W'
	MOV BYTE PTR ES:[BX+6], 'E'
	MOV BYTE PTR ES:[BX+12], 'L'
	MOV BYTE PTR ES:[BX+18], 'C'
	MOV BYTE PTR ES:[BX+24], 'O'
	MOV BYTE PTR ES:[BX+30], 'M'
	MOV BYTE PTR ES:[BX+36], 'E'
	MOV BYTE PTR ES:[BX+42], ' '
	MOV BYTE PTR ES:[BX+48], 'T'
	MOV BYTE PTR ES:[BX+54], 'O'
	MOV BX, 700
	MOV BYTE PTR ES:[BX]   , 'C'
	MOV BYTE PTR ES:[BX+4] , 'S'
	MOV BYTE PTR ES:[BX+8] , 'C'
	MOV BYTE PTR ES:[BX+12], '-'
	MOV BYTE PTR ES:[BX+16], '2'
	MOV BYTE PTR ES:[BX+20], '1'
	MOV BYTE PTR ES:[BX+24], '0'
	MOV BX, 1018
	MOV BYTE PTR ES:[Bx], 'P'
	MOV BYTE PTR ES:[BX+4], 'R'
	MOV BYTE PTR ES:[BX+8], 'O'
	MOV BYTE PTR ES:[BX+12], 'J'
	MOV BYTE PTR ES:[BX+16], 'E'
	MOV BYTE PTR ES:[BX+20], 'C'
	MOV BYTE PTR ES:[BX+24], 'T'
	MOV BYTE PTR ES:[BX+28], ' '
	MOV BYTE PTR ES:[BX+30], '1'
;SMILEY FACE
	MOV BX, 1790
	MOV BYTE PTR ES:[Bx]   , '*'
	MOV BYTE PTR ES:[Bx+2] , '*'
	MOV BYTE PTR ES:[Bx+4] , '*'
	MOV BYTE PTR ES:[Bx+30], '*'
	MOV BYTE PTR ES:[Bx+32], '*'
	MOV BYTE PTR ES:[Bx+34], '*'
