	MOV BYTE PTR ES:[Bx+188], '*'
	MOV BYTE PTR ES:[Bx+190], '*'
	MOV BYTE PTR ES:[Bx+192], '*'
	MOV BYTE PTR ES:[Bx+194], '*'
	MOV BYTE PTR ES:[Bx+196], '*'
	MOV BYTE PTR ES:[Bx+318], '*'
	MOV BYTE PTR ES:[Bx+320], '*'
	MOV BYTE PTR ES:[Bx+322], '*'
	MOV BYTE PTR ES:[Bx+324], '*'
