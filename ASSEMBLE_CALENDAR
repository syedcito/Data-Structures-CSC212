;///////////////////////////////////////////////////////////////////
HIDECURSOR PROC
	PUSH AX
	PUSH BX
	PUSH CX
	PUSH DX

	MOV AH, 3
	INT 10H
	OR CH, 30H
	MOV AH, 1
	INT 10H

	POP AX
	POP BX
	POP CX
	POP DX
	RET
HIDECURSOR ENDP
;///////////////////////////////////////////////////////////////////
RESTORESCREEN PROC
	
		MOV AX, 3H
		INT 10H
		MOV AX, 0B800H
		MOV ES, AX
		MOV CX, 20*80
		XOR BX, BX
		MOV AX, 0
RESTORE_SCR:	MOV AX, scrBuffer[BX]
		MOV ES: [BX], AX
		ADD BX, 2
		LOOP RESTORE_SCR
		RET
RESTORESCREEN ENDP
;///////////////////////////////////////////////////////////////////
SAVESCREEN PROC
	MOV AX, 0B800H
	MOV ES, AX
	MOV CX, 25*80
	xor BX, BX
t:	MOV AX,ES:[BX]
	MOV scrBuffer[BX],AX
	INC BX
	INC BX
	LOOP t
	RET
SAVESCREEN ENDP
;///////////////////////////////////////////////////////////////////
CLEARSCREEN PROC
	PUSH AX
	PUSH BX
	PUSH CX
	PUSH DX

	MOV AX, 0B800H
	MOV CX, 25*80
	MOV BX,0 
	MOV AX, 0720H 
L:	MOV ES:[BX], AX
	ADD BX, 2
	LOOP L

	POP DX
	POP CX
	POP BX
	POP AX	
	RET
CLEARSCREEN ENDP
;///////////////////////////////////////////////////////////////////
