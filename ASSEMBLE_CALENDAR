BORDERS PROC
	CALL CLEARSCREEN
	PUSH AX
	PUSH BX
	PUSH CX
	PUSH DX
;-------------------NAVIGATION BORDES-----------------
;UPPER LINE	
	MOV BX, 176			; PLACE  
	MOV CX, 22			; LENGTH
A:	MOV WORD PTR ES:[BX],02DCH 
	ADD BX, 2
	LOOP A

;LEFT LINE
	MOV BX, 336 			; PLACE 
	MOV CX, 7 			; LENGTH
B:	MOV WORD PTR ES:[BX], 02DBH 
	ADD BX, 160
	LOOP B

;RIGHT LINE	
	MOV BX, 320+58 			; PLACE 
	MOV CX, 7			; LENGTH
C:	MOV WORD PTR ES:[BX], 02DBH
	ADD BX, 160
    	LOOP C

;LOWER LINE	
