	MOV BYTE PTR ES:[Bx+846], '*'
	MOV BYTE PTR ES:[Bx+848], '*'
	MOV BYTE PTR ES:[Bx+948], '*'
	MOV BYTE PTR ES:[Bx+950], '*'
	MOV BYTE PTR ES:[Bx+952], '*'
	MOV BYTE PTR ES:[Bx+1000], '*'
	MOV BYTE PTR ES:[Bx+1002], '*'
	MOV BYTE PTR ES:[Bx+1004], '*'
	MOV BYTE PTR ES:[Bx+1112], '*'
