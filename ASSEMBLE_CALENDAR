WELCOME ENDP
;///////////////////////////////////////////////////////////////////
WELCOME_COL PROC
	PUSH AX
	PUSH BX
	PUSH CX
	PUSH DX

	MOV BX, 208
	MOV CX, 7
W0:	MOV WORD PTR ES:[BX], 09DCH
	ADD BX, 6
	LOOP W0
	MOV WORD PTR ES:[208+48], 09DCH
	MOV WORD PTR ES:[208+54], 09DCH
	MOV BX, 700
	MOV CX, 7
W:	MOV WORD PTR ES:[BX], 03DCH
	ADD BX, 4
	LOOP W	
	MOV BX, 1178
	MOV CX, 16
W1:	MOV WORD PTR ES:[BX], 04DCH
	ADD BX, 2
	LOOP W1
	MOV BX, 2352
	MOV CX, 5
W2:	MOV WORD PTR ES:[BX], 02DCH
	ADD BX, 2
	LOOP W2
	MOV WORD PTR ES:[2988], 06DCH
	MOV WORD PTR ES:[2990], 06DCH
	MOV WORD PTR ES:[2992], 06DCH

	MOV BX, 3840
	MOV CX, 19
W3:	MOV WORD PTR ES:[BX], 09DCH
	ADD BX, 4
	LOOP W3 

	POP AX
	POP BX
	POP CX
	POP DX
	RET
WELCOME_COL ENDP
;///////////////////////////////////////////////////////////////////
GOODBYE PROC
	PUSH AX
	PUSH BX
	PUSH CX
	PUSH DX
;----------PROJECT ENDING-------------
	MOV BX, 1144
	MOV BYTE PTR ES:[BX]   , 'E'
	MOV BYTE PTR ES:[BX+8]   , 'N'
	MOV BYTE PTR ES:[BX+16]   , 'D'
	MOV BYTE PTR ES:[BX+24]   , ' '
	MOV BYTE PTR ES:[BX+32]   , 'O'
	MOV BYTE PTR ES:[BX+40]   , 'F'
